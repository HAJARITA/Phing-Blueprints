<!-- Helper target for updating twitter-bootstrap. Make sure the git bin/ is on your system path -->
<target name="update-tb">
    <property name="package.name.tb" value="sass-twitter-bootstrap" />
    <trycatch property="error">
        <try>
            <gitclone
                    repository="http://github.com/jlong/${package.name.tb}.git"
                    targetPath="build/${package.name.tb}"
                    gitPath="git" />
        </try>
        <catch>
            <gitpull
                    repository="build/${package.name.tb}"
                    gitPath="git" />
        </catch>
    </trycatch>

    <copy todir="httpdocs/sass/partials" overwrite="true">
        <fileset dir="build/${package.name.tb}/lib">
            <include name="_*.scss" />
            <exclude name="_variables.scss" />
        </fileset>
    </copy>
    <copy tofile="httpdocs/sass/partials/_variables-new.scss" file="build/${package.name.tb}/lib/_variables.scss" overwrite="true" />
    <copy tofile="httpdocs/sass/partials/_bootstrap.scss" file="build/${package.name.tb}/lib/bootstrap.scss" overwrite="true" />
    <copy tofile="httpdocs/sass/partials/_responsive.scss" file="build/${package.name.tb}/lib/responsive.scss" overwrite="true" />
    <copy todir="httpdocs/img" overwrite="true">
        <fileset dir="build/${package.name.tb}/img">
            <include name="*.png" />
        </fileset>
    </copy>
    <copy todir="httpdocs/js/bootstrap" overwrite="true">
        <fileset dir="build/${package.name.tb}/js">
            <include name="bootstrap-*.js" />
        </fileset>
    </copy>
</target>